@model IEnumerable<WebApplication3.Models.Game>

@{
    ViewData["Title"] = "Index";
}

<div class="jumbotron text-center">
<h1>All Games</h1>
    </div>

<p>
    <a class="btn btn-dark" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.HomeTeam)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AwayTeam)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Venue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HomeScore)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AwayScore)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Win)
            </th>
           
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.HomeTeam)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AwayTeam)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Venue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HomeScore)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AwayScore)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Win)
            </td>
           
            <td>
                <a  class="color" asp-action="Edit" asp-route-id="@item.GameId">Edit</a> |
                <a class="color" asp-action="Details" asp-route-id="@item.GameId">Details</a> |
                <a class="color" asp-action="Delete" asp-route-id="@item.GameId">Delete</a>
            </td>
        </tr>
}

    </tbody>
</table>


<div>
    <a asp-controller="Home" asp-action="Dashboard">Back to Dashboard</a>
</div>